<div id="map"></div>
<script>
  var map;
  function initMap() {
    map = new google.maps.Map(document.getElementById('map'), {
      zoom: 14,
      center: new google.maps.LatLng(52.090842, -7.622121),
      mapTypeId: 'roadmap'
    });

    var icons = {
      cbc: {
      icon: 'images/maps/cbc_maps.png'
      },
      park: {
        icon: 'images/maps/park_maps.png'
      },
      lawlors: {
        icon: 'images/maps/lawlors_maps.png'
      },
      gold_coast: {
        icon: 'images/maps/gold_coast_maps.png'
      }
    };

    function addMarker(feature) {
      var marker = new google.maps.Marker({
        position: feature.position,
        icon: icons[feature.type].icon,
        map: map
      });
    }

    var features = [
      {
        position: new google.maps.LatLng(52.084842, -7.622221),
        type: 'cbc'
      }, {
        position: new google.maps.LatLng(52.094595, -7.623168),
        type: 'park'
      }, {
        position: new google.maps.LatLng(52.090664, -7.621003),
        type: 'lawlors'
      }, {
        position: new google.maps.LatLng(52.085555, -7.570012), 
        type: 'gold_coast'
      }
    ];

    for (var i = 0, feature; feature = features[i]; i++) {
      addMarker(feature);
    }
  }
</script>
 
<script async defer
  src="https://maps.googleapis.com/maps/api/js?key=AIzaSyCTD4GNG2NZFP0rSK1Jl8qq7yTkRtb38K4&callback=initMap">
</script>

